<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAddUsers">

    <Button
        android:id="@+id/btnExitToUsers"
        android:layout_width="216dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:text="戻る"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="216dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:text="追加する"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <CheckBox
        android:id="@+id/cbxAdmin"
        android:layout_width="291dp"
        android:layout_height="76dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="56dp"
        android:text="ADMIN"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbxStaff"
        android:layout_width="291dp"
        android:layout_height="70dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="32dp"
        android:text="スタッフ"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbxAdmin" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="名前"
        android:inputType="textPersonName"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/cbxStaff"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="@+id/cbxStaff"
        app:layout_constraintTop_toBottomOf="@+id/cbxStaff" />

    <EditText
        android:id="@+id/edtEmployerCode"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:textSize="30dp"
        android:hint="社員コード"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edtName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edtName"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="918dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="パスワード"
        android:inputType="number"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/edtEmployerCode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtEmployerCode"
        app:layout_constraintTop_toBottomOf="@+id/edtEmployerCode" />

</androidx.constraintlayout.widget.ConstraintLayout>